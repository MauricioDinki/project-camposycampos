  .hamburger
    background-color transparent
    display flex
    height 33px
    justify-content center
    width 33px

    // &-visibility
    //   cursor pointer
    //   position initial

    &-logo
      height 45px
      width auto

      &-container
        height 45px

    &-close
      height 12px
      width 12px

      &-container
        cursor pointer
        display flex

    &-menu
      &-container
        background-color #f5f5f5
        display inline
        bottom 0
        overflow hidden
        padding-bottom 50px
        position fixed
        right 0
        top 0
        -webkit-transition width 0.5s
        transition width 0.5s
        width 0%
        z-index 13

      &-header
        align-items center
        display flex
        flex-direction row
        justify-content space-between
        padding 40px 110px 50px 110px

      &-body
        padding 0 110px

    &-text
      color $blueT3
      font-size $fs29
      display inline-block
      letter-spacing 8.1px
      margin 5px 0
      padding 5px 0
      text-transform uppercase

      &-container
        display flex
        flex-direction column

    &-active,
    &-text:hover
      color $grayT1
      font-weight bold

    &-line
      &-icon
        background-color $blueT3
        height 1px
        width 13px

        &-container
          display flex
          flex-direction column
          justify-content center

        &:nth-child(2)
          margin 4px 0

@media screen and (max-width 700px)
  .nav
    height 57px
    justify-content space-between
    padding 0 29px

    &-lang
      &-container
        display none

        &-mobile
          border-bottom solid 1px $grayT1
          display none
          padding-bottom 23px

    &-logo
      height 32px
      width auto

    &-hamburger
      &-text
        display none

  .hamburger
    &-visibility
      right 30px

    &-logo
      height 28px
      width auto

      &-container
        height 28px

    &-line
      &-icon
        width 21px

        &:nth-child(2)
          margin 5px 0

    &-menu
      &-header
        padding 22px 27px 25px 27px

      &-body
        padding 0 27px

    &-text
      font-size 16px
      letter-spacing 4.5px
      margin 15px 0

      &-container
        margin 25px 0 0 0
